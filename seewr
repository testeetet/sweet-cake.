<body>

<header>üçì SweetFinder ‚Äì Descubra Sobremesas!</header>

<div class="container">
    <input type="text" id="searchBox" placeholder="Pesquisar sobremesa...">

    <div id="results"></div>
</div>

<!-- MODAL -->
<div class="modal" id="modal">
    <div class="modal-content" id="modalContent"></div>
</div>

<script>
    const searchBox = document.getElementById('searchBox');
    const results = document.getElementById('results');
    const modal = document.getElementById('modal');
    const modalContent = document.getElementById('modalContent');

    async function fetchRecipes(query = "") {
        const url = query === "" 
            ? "https://www.themealdb.com/api/json/v1/1/filter.php?c=Dessert"
            : `https://www.themealdb.com/api/json/v1/1/search.php?s=${query}`;

        const res = await fetch(url);
        const data = await res.json();

        displayRecipes(data.meals || []);
    }

    function displayRecipes(recipes) {
        results.innerHTML = "";

        recipes.forEach(meal => {
            const card = document.createElement('div');
            card.className = "recipe-card";

            card.innerHTML = `
                <img src="${meal.strMealThumb}">
                <div class="recipe-info">
                    <h3>${meal.strMeal}</h3>
                    <button onclick="openRecipe(${meal.idMeal})">Ver Receita</button>
                </div>
            `;

            results.appendChild(card);
        });
    }

    async function openRecipe(id) {
        const res = await fetch(`https://www.themealdb.com/api/json/v1/1/lookup.php?i=${id}`);
        const data = await res.json();
        const meal = data.meals[0];

        let ingredients = "";
        for (let i = 1; i <= 20; i++) {
            if (meal[`strIngredient${i}`]) {
                ingredients += `<li>${meal[`strIngredient${i}`]} - ${meal[`strMeasure${i}`]}</li>`;
            }
        }

        modalContent.innerHTML = `
            <h2>${meal.strMeal}</h2>
            <img src="${meal.strMealThumb}" style="width:100%; border-radius:12px; margin:10px 0;">
            <h3>Ingredientes</h3>
            <ul>${ingredients}</ul>
            <h3>Modo de preparo</h3>
            <p>${meal.strInstructions}</p>
            <button onclick="closeModal()">Fechar</button>
        `;

        modal.style.display = "flex";
    }

    function closeModal() {
        modal.style.display = "none";
    }

    searchBox.addEventListener("input", () => {
        fetchRecipes(searchBox.value);
    });

    window.onclick = function(event) {
        if (event.target === modal) {
            closeModal();
        }
    };

    fetchRecipes();
</script>

</body>
